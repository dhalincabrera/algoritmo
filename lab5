// laboratorio5.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>
#define N 100

using namespace std;

struct vector{
	int vec[N];
};

void cargar(int n, vector v[N]);
void invertir(int n, vector v[N]);
void mostrar(int n, vector v[N]);
void main()
{ int n;
	vector v[N];
	cout<<"ingresar el numero de elementos del array:";
	cin>>n;
	cargar(n,v);
	invertir (n,v);
	mostrar (n,v);

	getch();
}


void cargar(int n, vector v[N])
{
	for(int i=0;i<n;i++)
		for(int j=0;j<n;j++)
		{
			cout<<"ingresasr v["<<i<<"].["<<j<<"]=";
		    cin>>v[i].vec[j];
		}
}

void invertir(int n,vector v[N])
{ int aux;
	for(int i=0;i<n*0.5;i++)
		for(int j=0;j<n;j++)
		{
			aux=v[n-1].vec[n-1-j];
			v[N-1].vec[n-1-j]=v[i].vec[j];
			v[i].vec[j]=aux;
			
		}
}

void mostrar(int n, vector v[N])
{
	for(int i=0;i<n;i++)
	{
		for(int j=0;j<n;j++)
		{
			cout<<"ingresasr v["<<i<<"].["<<j<<"]= ";
			cout<<v[i].vec6
				[j]<<"\t";
		}
		cout<<"\n";
	}
}
